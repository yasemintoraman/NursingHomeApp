<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="421dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recyclerViewUserEmailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="useremail text"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/recyclerViewKahvalti"
                    android:layout_width="403dp"
                    android:layout_height="54dp"
                    android:layout_margin="5dp"
                    android:hint="Kahvaltı"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/recyclerViewOgleText"
                    android:layout_width="403dp"
                    android:layout_height="54dp"
                    android:layout_margin="5dp"
                    android:hint="Öğle Yemeği"
                    android:textAlignment="center"
                    android:textSize="25sp"

                    ></TextView>

                <TextView
                    android:id="@+id/recyclerViewAksamText"
                    android:layout_width="403dp"
                    android:layout_height="54dp"
                    android:layout_margin="5dp"
                    android:hint="Akşam Yemeği"
                    android:textAlignment="center"
                    android:textSize="25sp"></TextView>

                <TextView
                    android:id="@+id/recyclerViewAciklama2Text"
                    android:layout_width="403dp"
                    android:layout_height="54dp"
                    android:layout_margin="5dp"
                    android:hint="Açıklama"
                    android:textAlignment="center"
                    android:textSize="25sp" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>